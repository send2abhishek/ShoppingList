<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_login_linearLayout"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_two"
        android:layout_marginBottom="15dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:background="@color/colorPrimary"
        android:hint="Username"
        android:drawableLeft="@mipmap/ic_email"
        android:id="@+id/activity_login_user_email" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/ic_password"
        android:background="@color/colorPrimary"
        android:id="@+id/activity_login_user_password" />
    
    <Button
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Sign In"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:id="@+id/activity_login_login_btn"
        android:background="@drawable/btn_background"
        />
    <Button
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="No Account? Sign up"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:id="@+id/activity_login_register_btn"
        android:background="@drawable/btn_background"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

</LinearLayout>