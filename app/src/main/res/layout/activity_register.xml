<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/activity_register_linearLayout"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_two"
        android:layout_marginBottom="15dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:background="@color/colorPrimary"
        android:hint="Enter Your Name"
        android:id="@+id/activity_register_username" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:hint="Enter Your Email"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/ic_email"
        android:background="@color/colorPrimary"
        android:id="@+id/activity_register_user_email" />

    <Button
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Register"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:id="@+id/activity_register_register_btn"
        android:background="@drawable/btn_background"
        />
    <Button
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:text="Already Account? Sign In"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:id="@+id/activity_register_home_btn"
        android:background="@drawable/btn_background"
        />

</LinearLayout>