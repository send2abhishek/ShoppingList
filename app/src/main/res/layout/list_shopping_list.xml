<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="6dp"
    android:id="@+id/list_shopping_list_cardView"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
    android:layout_width="match_parent"
    android:padding="16dp"
        android:background="@drawable/recyler_item_background"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="6dp"
        android:id="@+id/list_shopping_list_name"
        android:textStyle="bold"
        android:text="Shopping List Name for tommorrow I don't "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/list_shopping_list_name"
        android:id="@+id/list_shopping_list_created_by"
        android:textColor="#000"
        android:text="Created By"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="10/12/2018"
        android:id="@+id/list_shopping_list_creation_date"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_shopping_list_owner_name"
            android:layout_toRightOf="@id/list_shopping_list_created_by"
            android:text="Abhishek Aryan"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/list_shopping_list_name" />

        </RelativeLayout>
</android.support.v7.widget.CardView>
